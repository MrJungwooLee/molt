<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <!-- 답글 ANSWER_NO 생성 -->
    <bean name="commentNoGnrService" class="egovframework.rte.fdl.idgnr.impl.EgovTableIdGnrServiceImpl" destroy-method="destroy">
        <property name="dataSource" ref="dataSource" />
        <property name="strategy"   ref="commentNoStrategy" />
        <property name="blockSize"  value="10"/>
        <property name="table"      value="TB_SEQUence"/>
        <property name="tableName"  value="COMMENT_NO"/>
    </bean>
    <bean name="commentNoStrategy" class="egovframework.rte.fdl.idgnr.impl.strategy.EgovIdGnrStrategyImpl">
        <property name="cipers"   value="20" />
    </bean>

</beans>